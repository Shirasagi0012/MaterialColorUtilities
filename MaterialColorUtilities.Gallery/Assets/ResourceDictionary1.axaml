<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:avalonia="clr-namespace:MaterialColorUtilities.Avalonia;assembly=MaterialColorUtilities.Avalonia">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="SurfaceBrush" Color="{avalonia:MdSysColor Surface, Theme=Dark}" />
        </ResourceDictionary>        
        <ResourceDictionary x:Key="Default">
            <SolidColorBrush x:Key="SurfaceBrush" Color="{avalonia:MdSysColor Surface, Theme=Default}" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
