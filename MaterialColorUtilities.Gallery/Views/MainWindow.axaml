<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MaterialColorUtilities.Gallery.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mcu="clr-namespace:MaterialColorUtilities.Avalonia;assembly=MaterialColorUtilities.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MaterialColorUtilities.Gallery.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="MaterialColorUtilities.Gallery"
        mcu:MaterialColor.Scheme="{mcu:MaterialColorScheme {mcu:TonalSpotScheme Color=Green}}">

    <TextBlock Background="{mcu:MdSysBrush Primary}"
               Foreground="{mcu:MdSysBrush OnPrimary}"
               Text="Material Color Utilities" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"/>

</Window>
